<% layout("/layouts/boilerplate") -%>

    <style>
        .allIcons{
            display: flex;
            flex-wrap: wrap;
            align-items: center;
            margin-top: 2rem;
        }

        .icon{
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            align-items: center;
            padding: 1.2rem;
            opacity: 0.7;
        }
        
        .icon:hover{
            opacity: 1;
            font-size: 0.9rem;
            cursor: pointer;
        }
        .icon p{
            font-size: 0.85rem;
        }
    </style>
    <body>
        <div class="allIcons">
            <div class="icon">
                <i class="fa-solid fa-umbrella-beach"></i>
                <p>Beach</p>                
            </div>
            <div class="icon">
                <i class="fa-solid fa-fire"></i>
                <p>Trending</p>
            </div>
            <div class="icon">
                <i class="fa-solid fa-mountain-sun"></i>
                <p>Mountains</p>
            </div>
            <div class="icon">
                <i class="fa-solid fa-person-hiking"></i>
                <p>Hiking</p>
            </div>
            <div class="icon">
                <i class="fa-solid fa-city"></i>
                <p>Iconic cities</p>
            </div>
            <div class="icon">
                <i class="fa-solid fa-sailboat"></i>
                <p>Boats</p>
            </div>
            <div class="icon">
                <i class="fa-solid fa-landmark-dome"></i>
                <p>Domes</p>
            </div>
            <div class="icon">
                <i class="fa-brands fa-fort-awesome"></i>
                <p>Castles</p>
            </div>
            <div class="icon">
                <i class="fa-solid fa-cow"></i>
                <p>Farms</p>
            </div>
            <div class="icon">
                <i class="fa-solid fa-person-swimming"></i>
                <p>Pools</p>
            </div>
            <div class="icon">
                <i class="fa-solid fa-snowflake"></i>
                <p>Arctic</p>
            </div>
        </div>
        
        <!-- <h2>All Listings</h2> -->
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
            <%for(let listings of allListings){%>
                <a href="/listings/<%= listings._id %>" class="listing-link">
                    <div class="card mb-3 listing-card">
                        <img src="<%= listings.image.url %>" class="card-img-top" alt="listing_image">
                        <div class="card-body">
                            <p class="card-text">
                                <b>
                                    <%= listings.title %>
                                </b><br>
                                &#8377;<%= listings.price.toLocaleString("en-IN") %>/night
                            </p>
                        </div>
                    </div>
                </a>
                <%}%>

        </div>
    </body>